{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "default": {},
    "title": "Root Schema",
    "required": [
        "employeeId",
        "name",
        "organization",
        "role"
    ],
    "properties": {
        "employeeId": {
            "type": "integer",
            "default": 0,
            "title": "The employeeId Schema",
            "examples": [
                1
            ]
        },
        "name": {
            "type": "string",
            "default": "",
            "title": "The name Schema",
            "examples": [
                "Mary"
            ]
        },
        "organization": {
            "type": "string",
            "default": "",
            "title": "The organization Schema",
            "examples": [
                "IT"
            ]
        },
        "role": {
            "type": "string",
            "default": "",
            "title": "The role Schema",
            "examples": [
                "QA"
            ]
        }
    },
    "examples": [{
        "employeeId": 1,
        "name": "Mary",
        "organization": "IT",
        "role": "QA"
    }]
}